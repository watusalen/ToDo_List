{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["DOM", "ES6"],
    "outDir": "./public",          // Arquivos compilados serão gerados aqui
    "rootDir": "./src",          // Todos os arquivos TypeScript estão aqui
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "allowJs": true,             // Permite a compilação de arquivos JavaScript
    "checkJs": true,             // Verifica erros em arquivos JavaScript
    "sourceMap": true            // Gera source maps para depuração
  },
  "exclude": ["node_modules", "dist"], // Ignora esses diretórios
  "include": ["src"]            // Apenas arquivos dentro de 'src' serão compilados
}